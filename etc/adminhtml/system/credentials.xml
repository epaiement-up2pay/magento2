<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
        <field id="base_url" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>config_base_url</label>
            <comment>config_base_url_desc</comment>
        </field>
        <field id="http_user" translate="label" type="text" sortOrder="35" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>config_http_user</label>
        </field>
        <field id="http_pass" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>config_http_password</label>
        </field>
        <field id="button_test_credentials" name="test_credentials" translate="button_label" sortOrder="45" showInDefault="1"
            showInWebsite="1" showInStore="1">
            <button_label>test_credentials</button_label>
            <frontend_model>CreditAgricole\PaymentGateway\Block\Adminhtml\System\Config\TestCredentials</frontend_model>
        </field>
        <field id="merchant_account_id" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>config_merchant_account_id</label>
        </field>
        <field id="secret" translate="label" type="text" sortOrder="55" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>config_merchant_secret</label>
        </field>
</include>
